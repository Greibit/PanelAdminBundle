<div class="float-left">
                    <a class="btn btn-default btn-circle btn-lg" href="{{ "{{ path('"~ route_name_prefix ~"') }}" }}">
                        <span class="glyphicon glyphicon-{{ action_icons['index'] }}"></span>
                    </a>
                </div>
{% if ('edit' in actions) and (not hide_edit) %}
                <div class="float-left">
                    <a class="btn btn-primary btn-circle btn-lg" href="{{ "{{ path('"~ route_name_prefix ~"_edit', { 'id': entity.id }) }}" }}">
                        <span class="glyphicon glyphicon-{{ action_icons['edit'] }}"></span>
                    </a>
                </div>
{% endif %}
{% if ('delete' in actions) and (not hide_delete) %}
                <div class="float-left">
                    <form action="{{ "{{ path('"~ route_name_prefix ~"_delete', { 'id': entity.id }) }}" }}" method="post">
                        <input type="hidden" name="_method" value="DELETE" />
                        {{ '{{ form_widget(delete_form) }}' }}
                        <button class="btn btn-danger btn-circle btn-lg" type="submit" onclick="return confirm('{{ "{{ 'views.recordactions.confirm'|trans({}, 'GreibitPanelAdminBundle') }}" }}');"><span class="glyphicon glyphicon-{{ action_icons['delete'] }}"></span></button>
                    </form>
                </div>
{% endif %}