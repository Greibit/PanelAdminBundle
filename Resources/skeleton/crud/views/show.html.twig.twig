{{ "{% extends 'GreibitPanelAdminBundle::layout.html.twig' %}" }}

{{ "{% block title %}" }}
{{ "{{ parent() }} - {{ 'views.show.show'|trans({'%entity%': '" }}{{ entity }}{{ "'}, 'GreibitPanelAdminBundle') }}" }}
{{ "{% endblock %}" }}

{{ "{% block page %}" }}
<div class="row">
    <div class="col-md-12">
    <h1 class="page-header">
        {{ entity }}
        <span class="float-right">
            {% set hide_edit, hide_delete = false, false %}
            {% include 'crud/views/others/record_actions.html.twig.twig' %}
        </span>
    </h1>

<form class="form-horizontal">
    <fieldset>
        {%- for field, metadata in fields %}
        <div class="form-group">
            <div class="col-sm-2">
                <label class="control-label">{{ field|capitalize }}</label>
            </div>
            <div class="col-sm-10">
                {%- if metadata.type in ['date', 'datetime'] %}
                    <span class="form-control">{{ '{{ entity.'~ field|replace({'_': ''}) ~'|date(\'Y-m-d H:i:s\') }}' }}</span>
                {%- else %}
                    <span class="form-control">{{ '{{ entity.'~ field|replace({'_': ''}) ~' }}' }}</span>
                {%- endif %}
            </div>
        </div>
        {%- endfor %}
    </fieldset>
</form>

</div>
</div>
{{ "{% endblock %}" }}